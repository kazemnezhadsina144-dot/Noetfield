  <!-- Mobile action bar -->
  <div class="actionbar" role="region" aria-label="Quick actions">
    <div class="inner">
      <div class="meta">
        <span class="tag mono" id="dealIdTag2">NF-PD-—</span>
        <span class="pill mono">RID: <strong id="ridText2">—</strong></span>
      </div>
